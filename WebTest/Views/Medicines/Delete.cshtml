                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.InStock)
                            </dd>
                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.Category)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.Category.Name)
