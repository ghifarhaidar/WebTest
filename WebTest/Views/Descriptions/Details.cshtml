@model DataAccess.Models.Description // Replace with your actual Description model namespace

@{
    ViewData["Title"] = "Description Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <h1 class="display-4">Description Details</h1>
            <p class="lead">Details for @Model.Name</p>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">Name</dt>
                <dd class="col-sm-10">@Model.Name</dd>
                <dt class="col-sm-2">Description</dt>
                <dd class="col-sm-10">@Model.Description1</dd>
            </dl>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
            <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
        </div>
    </div>
</div>
